---
export interface Props {
	id: string
	title: string
	img: string
	three?: string
}

const { id, title, img } = Astro.props
---

<a href=`/${id}`>
	<img
		class='aspect-[500/500] object-cover rounded-lg pegatina'
		src=`${img}`
		alt=`${title}`
	/>
</a>

<style>
	.pegatina:hover {
		filter: brightness(1.05);
	}
	.pegatina {
		background-color: rgb(150, 205, 238);
		border: solid 1px white;
	}

	:global(.pegatina) {
		background-color: rgb(150, 205, 238);
		border: solid 1px white;
	}
</style>
