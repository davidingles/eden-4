---
import LayMovil from '@/components/LayMovil.astro'
import LayPantalla from '@/components/LayPantalla.astro'
import { View } from '@react-three/drei'
import { ViewTransitions } from 'astro:transitions'
interface Props {
	title: string
}

const { title } = Astro.props
---

<html lang='es'>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='description'
			content='Astro description'
		/>
		<meta
			name='viewport'
			content='width=device-width'
		/>
		<link
			rel='icon'
			type='image/svg+xml'
			href='/svg/favicon.auxiliar.svg'
		/>
		<meta
			name='generator'
			content={Astro.generator}
		/>
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class='body dil-barra-desplazamiento'>
		<div class='lay-pantalla'>
			<LayPantalla>
				<slot />
			</LayPantalla>
		</div>
		<div class='lay-movil'>
			<LayMovil>
				<slot />
			</LayMovil>
		</div>
		<style is:global>
			:root {
				--accent: 136, 58, 234;
				--auxi1: rgb(222, 171, 18);
				--auxi2: rgb(0, 128, 72);
				--degraUno: linear-gradient(
					45deg,
					rgb(222, 171, 18, 0.2),
					rgb(22, 24, 24),
					rgb(0, 128, 72, 0.1)
				);
				--degraDos: linear-gradient(
					45deg,
					rgb(222, 171, 18, 0.1),
					rgb(255, 255, 255),
					rgb(222, 171, 18, 0.1)
				);
			}
			html {
				font-family: 'CircularStd', system-ui, sans-serif;
				background-color: #222;
				color: white;
				background-size: 224px;
				scroll-behavior: smooth;
			}
			.lay-movil {
				display: flex;
			}
			.lay-pantalla {
				display: none;
			}

			@media screen and (min-width: 768px) {
				.lay-pantalla {
					display: block;
				}
				.lay-movil {
					display: none;
				}
			}

			::selection {
				background-color: var(--auxi1);
				color: white;
			}

			.light .body {
				background-color: white;
				color: rgb(55, 55, 55);
			}
			.asideMenu {
				height: calc(100vh - 104px);
				background-color: #222;
			}
			.light .asideMenu {
				background-color: #f0f0f0;
			}
			.mainMenu {
				height: calc(100vh - 104px);
				background-color: #333;
			}
			.light .mainMenu {
				background-color: rgb(245 245 245);
			}

			.bordeRojo {
				border: 1px solid red;
			}
			.bordeVerde {
				border: 1px solid green;
			}
			.tipografia1 {
				font-family: 'ErasITC', 'CircularStd', system-ui, sans-serif;
			}
			.tipograf√≠a2 {
				font-family: 'CircularStd', system-ui, sans-serif;
			}
			.colorUno {
				color: var(--auxi1);
			}
			.colorDos {
				color: var(--auxi2);
			}

			@font-face {
				font-family: 'ErasITC';
				src: url('/fonts/ITC Eras Demi.ttf'); /* format('ttf'); */
				/* font-style: normal;
				font-display: swap; */
			}
			@font-face {
				font-family: 'CircularStd';
				src: url('/fonts/CircularStd-Medium.woff2') format('woff2');
				font-weight: 500;
				font-style: normal;
				font-display: swap;
			}

			@font-face {
				font-family: 'CircularStd';
				src: url('/fonts/CircularStd-Book.woff2') format('woff2');
				font-weight: 400;
				font-style: normal;
				font-display: swap;
			}

			@font-face {
				font-family: 'CircularStd';
				src: url('/fonts/CircularStd-Light.woff2') format('woff2');
				font-weight: 300;
				font-style: normal;
				font-display: swap;
			}

			@font-face {
				font-family: 'CircularStd';
				src: url('/fonts/CircularStd-Bold.woff2') format('woff2');
				font-weight: 700;
				font-style: normal;
				font-display: swap;
			}

			@font-face {
				font-family: 'CircularStd';
				src: url('/fonts/CircularStd-Black.woff2') format('woff2');
				font-weight: 900;
				font-style: normal;
				font-display: swap;
			}

			.dil-barra-desplazamiento {
				/* Estilos de la barra de desplazamiento */
				scrollbar-width: thin; /* Ancho de la barra de desplazamiento */
				scrollbar-color: #a92020 #0feb03; /* Color de la barra y el fondo de la barra */
			}

			/* Estilos para la barra de desplazamiento */
			.dil-barra-desplazamiento::-webkit-scrollbar {
				width: 12px; /* Ancho de la barra de desplazamiento */
			}

			.dil-barra-desplazamiento::-webkit-scrollbar-thumb {
				background-color: var(
					--auxi1
				); /* Color de la barra de desplazamiento */
			}

			.dil-barra-desplazamiento::-webkit-scrollbar-track {
				background-color: black;
			}

			.light .dil-barra-desplazamiento::-webkit-scrollbar-thumb {
				background-color: var(
					--auxi2
				); /* Color de la barra de desplazamiento */
			}

			.light .dil-barra-desplazamiento::-webkit-scrollbar-track {
				background-color: white;
			}
			.vid {
				height: calc(100vh - 222px);
			}
		</style>
	</body>
</html>
